<% provide(:title, "Home") %>
<h2 class="form">Calculate Route:</h2>
<div class="wide"><h2 class="route">Route: </h2></div>

<div class="form">
  <form class="center" id="calculate-route" name="calculate-route" action="#" method="get">
      <p>
        <label>First address: </label>
        <input type="text" name="address1" id="from" size="50" required>
        <a class="getlocation" id="from-link" href="#">Get my position</a>
      </p>
      <p>
         <label>Second address: </label>
         <input type="text" name="address2" id="to" size="50" required>
         <a class="getlocation" id="to-link" href="#">Get my position</a>
      </p>
         <label>Step Count: </label>
         <input type="integer" name="steps" id="steps" size="10" required>
      <input type="button" id="submit" value="Show" />
      <input type="reset" value="Reset"/>
  </form>
</div>

<div id = "map_route">
  <div id="map-canvas"></div>
  <div class="map_hide" id="map_canvas"></div>
  <div class="map_hide" id="directions-panel"></div>
  <div class="reset_box">
    <div class="map_hide" id="step-count" class="center"></div>
    <button class="map map_hide">Map a new route</button>
  </div>
</div>
<div id = "overlay">
  <div><h4 class="center">We are finding your perfect route</h4>
       <img class="center" src="http://thinkfuture.com/wp-content/uploads/2013/10/loading_spinner.gif">
  </div>
</div>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>


